<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Demo_QuizApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

    </style>
    <style name="RatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_rating</item>
        <item name="android:indeterminateDrawable">@drawable/custom_rating</item>
        <item name="android:minHeight">45dp</item>
        <item name="android:maxHeight">43dp</item>
    </style>
    <style name="Theme.Demo_QuizApp" parent="Base.Theme.Demo_QuizApp" />
    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">#FFFFFF</item>
        <item name="android:windowBackground">@drawable/popup_background</item>
        <item name="buttonBarPositiveButtonStyle">@style/positivebutton</item>
        <item name="buttonBarNegativeButtonStyle">@style/nagativebutton</item>
        <item name="android:textColorPrimary">#000000</item>
    </style>
    <style name="positivebutton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="nagativebutton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black</item>
    </style>

</resources>